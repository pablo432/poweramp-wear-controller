<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        app:layout_box="all">

        <LinearLayout
            android:id="@+id/repeat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/repeat_button"
                android:layout_width="@dimen/player_view_icon_size"
                android:layout_height="@dimen/player_view_icon_size"
                android:padding="@dimen/player_view_icons_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/matte_repeat_levels"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/repeat_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/repeat_mode"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shuffle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shuffle_button"
                android:layout_width="@dimen/player_view_icon_size"
                android:layout_height="@dimen/player_view_icon_size"
                android:padding="@dimen/player_view_icons_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/matte_shuffle_levels"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/shuffle_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/shuffle_mode"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>